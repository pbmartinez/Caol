@model Application.Dtos.CursoDtoForUpdate


<form action="@Url.Action("Edit","Curso")" method="post">
    <input asp-for="Nombre" />
    <input asp-for="Descripcion" />
    <select asp-for="EscuelaId" asp-items="ViewBag.Escuelas" ></select>
    <button class="btn btn-success" type="submit">@Domain.Localization.Resource.btn_Edit</button>
    <a class="btn btn-secondary" href="@Url.Action("Index","Curso")">@Domain.Localization.Resource.btn_Cancel</a>
</form>
