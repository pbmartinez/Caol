@model Application.Dtos.EstudianteDtoForCreate


<form action="@Url.Action("Create","Estudiante")" method="post">
    <div class="row">
        <div class="form-group" col-md-4>
            <label asp-for="Nombre" class="control-label"></label>
            <input asp-for="Nombre" class="form-control" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>

        <div class="form-group" col-md-4>
            <label asp-for="FechaNacimiento" class="control-label"></label>
            <input asp-for="FechaNacimiento" class="form-control" type="date" />
            <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
        </div>

        <div class="form-group" col-md-4>
            <label asp-for="Grado" class="control-label"></label>
            <input asp-for="Grado" class="form-control" />
            <span asp-validation-for="Grado" class="text-danger"></span>
        </div>

        <div class="form-group" col-md-4>
            <label asp-for="EscuelaId" class="control-label"></label>
            <select asp-for="EscuelaId" asp-items="@ViewBag.Escuelas">
                <option disabled selected>Seleccione Escuela</option>
            </select>
            <span asp-validation-for="EscuelaId" class="text-danger"></span>
        </div>
    </div>

    <button class="btn btn-success" type="submit">@Domain.Localization.Resource.btn_Add</button>
    <a class="btn btn-secondary" href="@Url.Action("Create","Estudiante")">@Domain.Localization.Resource.btn_Cancel</a>
</form>
